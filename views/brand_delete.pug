extends layout

block content
    h1 #{title}: #{brand.name}

    if brand_items.length 

        p #[strong Delete the following items before attempting to delete this brand:]

            h4 Tents 

            dl
            each item in brand_items
                dt
                  a(href=item.url) #{item.name}
                dd #{item.desc}  

    else 
      p Do you really want to delete this brand?

      form(method='POST' action='')
        div.form-group            
          input#brandid.form-control(type='hidden', name='brandid', required='true', value=brand._id)
        button.btn.btn-primary(type='submit') Delete  