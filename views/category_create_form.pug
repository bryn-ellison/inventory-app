extends layout

block content
    h1= title

    form(method='POST' action='')
        div.form-group
            label(for='category_name') Category name: 
            input#category_name.form-control(type='text' placeholder='category name' name='category_name' required='true' value=(undefined===category ? '' : category.name))
        button.btn.btn-primary(type='submit') Submit 

    if errors 
        ul
            for error in errors 
                li!= error.msg